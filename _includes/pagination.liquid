{% if paginator.total_pages > 1 %}
  <nav aria-label="Blog page navigation">
    <ul class="pagination pagination-lg justify-content-center">
      <!-- Previous Page Link -->
      <li class="page-item {% unless paginator.previous_page %}disabled{% endunless %}">
        <a 
          class="page-link" 
          href="{% if paginator.previous_page %}{{ paginator.previous_page_path | relative_url }}{% else %}#{% endif %}" 
          tabindex="-1" 
          aria-disabled="{% unless paginator.previous_page %}true{% else %}false{% endunless %}">
          Newer
        </a>
      </li>

      <!-- Page Numbers -->
      {% if paginator.page_trail %}
        {% for trail in paginator.page_trail %}
          <li class="page-item {% if paginator.page == trail.num %}active{% endif %}">
            <a class="page-link" href="{{ trail.path | relative_url }}">{{ trail.num }}</a>
          </li>
        {% endfor %}
      {% endif %}

      <!-- Next Page Link -->
      <li class="page-item {% unless paginator.next_page %}disabled{% endunless %}">
        <a 
          class="page-link" 
          href="{% if paginator.next_page %}{{ paginator.next_page_path | relative_url }}{% else %}#{% endif %}">
          Older
        </a>
      </li>
    </ul>
  </nav>
{% endif %}